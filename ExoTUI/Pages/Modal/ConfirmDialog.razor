@if (Show)
{
    <div class="confirm-dialog-container">
        <div class="confirm-dialog">
            <h3>
                Are you sure ?
            </h3>

            <div class="d-flex flex-row justify-content-end mt-3">

                <button @onclick="OnCancel" class="btn btn-secondary shadow">
                    Cancel
                </button>

                <button @onclick="OnOk" class="btn btn-danger shadow ms-3">
                    Delete
                </button>
            </div>
        </div>
    </div>
}
